<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.project.zero_wait_back.mapper.UserMapper">

    <insert id="insertUser" parameterType="com.project.zero_wait_back.dto.response.UserRespDto">
        INSERT INTO user_tb (
        password, name, phone_number, role, status, created_at
        ) VALUES (
        #{password}, #{name}, #{phoneNumber}, 'USER', 'ACTIVE', NOW()
        )
    </insert>

    <select id="findAllUsers" resultType="com.project.zero_wait_back.entity.User">
        SELECT * FROM user_tb
    </select>

</mapper>